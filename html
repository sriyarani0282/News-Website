<script>
    function loadMore(articleId) {
        const article = document.getElementById(articleId);
        const moreContent = document.createElement('p');
        moreContent.textContent = 'This is additional content loaded for ' + article.querySelector('h2').textContent;
        article.appendChild(moreContent);
    }

</script>
